<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css" />
<%- include('../partials/nav') %>
<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">

    <label for="airline-input">Airline:</label>
    <select name="airline">
      <option value="Spirt">Spirit</option>
      <option value="United">United</option>
      <option value="Delta">Delta</option>
      <option value="KoreaAir">KoreaAir</option>
    </select>
    <label for="airport-input">Airport:</label>
    <select name="airport">
        <option value="MIA">MIA</option>
        <option value="SLC">SLC</option>
        <option value="MCO">MCO</option>
        <option value="LAX">LAX</option>
        <option value="WPB">WPB</option>
      </select>
      <label for="flight-number-input">Flight Number:</label>
      <input type="text" name="flightNo" id="flight-number-input">
  
      <label for="departs-input">Departs:</label>
      <input type="datetime-local" name="departs">
      
  
      <button type="submit">Add Flight</button>
    </form>
  </main>
  
  <%- include("../partials/footer") %>